 http://www.steve.org.uk/

=cut


use Redis;
use DHCP::User;
use Getopt::Long;

my $user;

exit
  if (
     !Getopt::Long::GetOptions( "username=s", \$user ) );


#
#  If missing a user then abort.
#
if ( !$user )
{
    print "Usage: $0 --user=username\n";
    exit(1);
}

#
#  Connect to redis
#
my $r = new Redis;
die "Redis doesn't seem to be running on this host" unless ( $r->ping() );

#
#  Create a helper.
#
my $tmp = DHCP::User->new( redis => $r );

if ( ! $tmp->present( $user ) )
{
    print "The user doesn't exist: $tmp\n";
    exit(1);
}

#
#  Delete the user.
#
$tmp->deleteUser($user);
