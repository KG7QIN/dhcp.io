<h1>Your Profile Details</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-1 col-md-1">
    </div>
    <div class="col-sm-11 col-md-11">
      <!-- tmpl_if name='thanks' -->
      <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p>Your details were updated.</p>
      </div>
      <!-- tmpl_else -->
      <p>Here are your current details:</p>
      <!-- /tmpl_if -->
      <form method="POST" action="/profile">
        <input type="hidden" name="mode" value="profile">

        <table border="0" cellspacing="5" cellpadding="5" class="table table-hover table-striped table-condensed">
          <tr><td><b>Username</b></td><td><!-- tmpl_var name='username' --></td></tr>
          <tr><td><b>Email</b></td><td><input type="text" name="email" value="<!-- tmpl_var name='email' escape='html' -->"/></td></tr>
          <tr><td><b>Change Password</b></td><td><input type="password" name="pass" value=""/></td></tr>
          <tr><td></td><td><input type="submit" name="submit" value="Update Details"/></td></tr>
        </table>
    </div>
  </div>
</div>
