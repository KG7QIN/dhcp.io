<!-- tmpl_if name='check_email' -->
<h1>Reset Email Sent</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-1 col-md-1">
    </div>
    <div class="col-sm-11 col-md-11">
      <p>Your account was found, and an email was sent if you had an email address registered.</p>
      <p>If you didn't have an address registered when you created the account you're out of luck.</p>
    </div>
  </div>
</div>

<!-- tmpl_else -->

<h1>Password Reset Request</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-1 col-md-1">
    </div>
    <div class="col-sm-11 col-md-11">
      <!-- tmpl_if name='not_found' -->
      <div class="alert alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p>Your account was not found...</p>
      </div>
      <!-- /tmpl_if -->

      <form method="POST" action="/forgotten">
        <input type="hidden" name="mode" value+"forgotten">
        <p>Please enter your username, or your email address:</p>
        <input type="text" name="text" value="">
        <input type="submit" name="submit" value="Reset">
      </form>
    </div>
  </div>
</div>
<!-- /tmpl_if -->
